<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView 
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/cardview"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    card_view:cardBackgroundColor="@android:color/white"
    card_view:cardCornerRadius="5dp"
    card_view:cardElevation="2sp"
    card_view:cardUseCompatPadding="true" >
<!--  Extra Appcompat Library for effect
    <com.andexert.library.RippleView
        android:id="@+id/more"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        rv_centered="true" >
-->
        <RelativeLayout
            android:id="@+id/relative"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" >

            <TextView
                android:id="@+id/counter_name"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="5sp"
                android:layout_toLeftOf="@+id/counter_increment"
                android:layout_toRightOf="@+id/down_image_button"
                android:clickable="false"
                android:ellipsize="end"
                android:focusable="false"
                android:gravity="start"
                android:maxLines="1"
                android:text="Counter Name"
                android:textColor="@color/color_1"
                android:textColorHint="@color/hint_text"
                android:textSize="18sp" />

            <TextView
                android:id="@+id/counter_increment"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="5sp"
                android:layout_toLeftOf="@+id/up_image_button"
                android:clickable="false"
                android:focusable="false"
                android:gravity="end"
                android:maxLines="1"
                android:minWidth="30dp"
                android:maxWidth="100dp"
                android:text="1"
                android:textColor="@color/color_1"
                android:textColorHint="@color/hint_text"
                android:textSize="18sp" />

            

            
          

        </RelativeLayout>
        <!--  
    </com.andexert.library.RippleView>
-->
</android.support.v7.widget.CardView>